<% if topic.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Following <%= pluralize(topic.errors.count, "error") %> prohibited this 
      <%= topic.class.to_s.capitalize %> from being saved:      
    </div>
    <ul>
      <% topic.errors.full_messages.each do |m| %>
        <li><%= raw m %></li>
      <% end %>
    </ul>
  </div>
<% end %>

