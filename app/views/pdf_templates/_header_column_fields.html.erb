<div class="row">
  <div class="col-md-3">
    <div class="form-group">
      <%= g.label :content %>
      <%= g.select :content, 
                   options_for_select(Member.attribute_names + ["#"],
                                      g.object.content),
                   { include_blank: '' }, 
                   { class: "column-header form-control" } %>
    </div>
  </div>

  <div class="col-md-3">
    <div class="form-group">
      <%= g.label :title %>
      <%= g.text_field :title, { class: "column-name form-control" } %>
    </div>
  </div>

  <div class="col-md-3">
    <div class="form-group">
      <%= g.label :size %>
      <%= g.text_field :size, { class: "form-control" } %>
    </div>
  </div>

  <div class="col-md-3">
    <%= g.hidden_field :_destroy %>
    <%= link_to "Remove", '#', class: "remove_fields" %>
  </div>
</div>
